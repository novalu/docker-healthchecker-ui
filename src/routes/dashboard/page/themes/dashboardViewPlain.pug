doctype html

html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Containers status
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
  body
    section.section
      .container
        h1.title Containers status
        each container in containers
          p.subtitle(style={ "margin-bottom": "0px" })
            span=`${container.image}: `
            strong(style={ color: container.healthColor })=container.healthText

  script(src='/dashboard.js')